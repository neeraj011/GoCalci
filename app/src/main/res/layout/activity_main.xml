<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="project.speech.MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptystring"
        android:id="@+id/TVresult"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptystring"
        android:id="@+id/TVresult1"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/btn7"
            android:onClick="onClickNumber"
            android:layout_above="@+id/btn4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/btn8"
            android:onClick="onClickNumber"
            android:layout_above="@+id/btn4"
            android:layout_toEndOf="@+id/btn7"
            android:layout_toRightOf="@+id/btn7" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/btn9"
            android:onClick="onClickNumber"
            android:layout_alignTop="@+id/btn8"
            android:layout_toEndOf="@+id/btn8"
            android:layout_toRightOf="@+id/btn8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:onClick="onClickNumber"
            android:layout_above="@+id/btn1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/btn5"
            android:onClick="onClickNumber"
            android:layout_alignTop="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:layout_toRightOf="@+id/btn4" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/btn6"
            android:onClick="onClickNumber"
            android:layout_alignTop="@+id/btn5"
            android:layout_toStartOf="@+id/btnDiv"
            android:layout_toLeftOf="@+id/btnDiv" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:onClick="onClickNumber"
            android:layout_above="@+id/btn0"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_alignTop="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:layout_toEndOf="@+id/btn1"
            android:onClick="onClickNumber" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/btn3"
            android:onClick="onClickNumber"
            android:layout_below="@+id/btn5"
            android:layout_toEndOf="@+id/btn5"
            android:layout_toRightOf="@+id/btn5" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/btnClear"
            android:onClick="onClickClear"
            android:layout_above="@+id/btn7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/btn0"
            android:onClick="onClickNumber"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/btnEqual"
            android:onClick="onClickEqual"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/btn3"
            android:layout_toEndOf="@+id/btn1"
            android:layout_alignRight="@+id/btn3"
            android:layout_toRightOf="@+id/btn1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:onClick="onClickNumber"
            android:id="@+id/button5"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnPlus"
            android:onClick="onClickNumber"
            android:layout_alignTop="@+id/btn9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btnMinus"
            android:onClick="onClickNumber"
            android:layout_alignTop="@+id/btn6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/btnMult"
            android:onClick="onClickNumber"
            android:layout_above="@+id/btnEqual"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/btnDiv"
            android:onClick="onClickNumber"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button"
            android:onClick="onClickBack"
            android:layout_alignTop="@+id/btnClear"
            android:layout_toEndOf="@+id/btnClear"
            android:layout_toRightOf="@+id/btnClear" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:src="@android:drawable/presence_audio_online"
            android:onClick="onButtonClick"
            android:layout_above="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignParentRight="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:onClick="onClickNumber"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:onClick="onClickNumber"
            android:id="@+id/button4"
            android:layout_alignTop="@+id/button3"
            android:layout_toStartOf="@+id/btnPlus"
            android:layout_toLeftOf="@+id/btnPlus" />
    </RelativeLayout>
</LinearLayout>